		GameRegistry.addSmelting(ModBlocks.copper_block, new ItemStack(ModItems.copper_ingot, 1), 1.5f);
		GameRegistry.addSmelting(ModBlocks.copper_block, new ItemStack(ModItems.copper_ingot, 1), 1.5f);
		GameRegistry.addSmelting(ModBlocks.copper_block, new ItemStack(ModItems.copper_ingot, 1), 1.5f);
		GameRegistry.addSmelting(ModBlocks.copper_block, new ItemStack(ModItems.copper_ingot, 1), 1.5f);
